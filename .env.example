# Docker Configuration
APP_PORT=8000
VITE_PORT=5173
APP_IMAGE=hub01_shop_app

# Application Configuration
APP_NAME="Hub01 Shop"
APP_LOGO="/images/logo.svg"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://0.0.0.0:8000

APP_ADMIN_EMAIL=admin@example.com
APP_ADMIN_PASSWORD=admin

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mariadb
DB_HOST=db
DB_PORT=3306
DB_DATABASE=app_db
DB_USERNAME=user
DB_PASSWORD=userpassword

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
CACHE_STORE=redis
REDIS_CACHE_CONNECTION=cache

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

VITE_APP_NAME="${APP_NAME}"

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="app@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Projects Configuration
PROJECTS_AUTO_APPROVE=false
PROJECTS_FILES_DISK="local"
PROJECTS_FILES_DIRECTORY="project-files"

# Project Quotas
QUOTA_PENDING_PROJECTS_MAX=3
QUOTA_TOTAL_STORAGE_MAX=1073741824
QUOTA_PROJECT_STORAGE_MAX=524288000
QUOTA_VERSION_PER_DAY_MAX=5
QUOTA_VERSION_SIZE_MAX=104857600
QUOTA_FILES_PER_VERSION_MAX=5
QUOTA_FILE_SIZE_MAX=104857600

# Cleanup Configuration
CLEANUP_UNVERIFIED_WARNING_DAYS=7
CLEANUP_UNVERIFIED_DELETION_DAYS=14

# OpenTelemetry Configuration
# ==========================================================================================
OTEL_SDK_DISABLED=false

# Service identification
OTEL_SERVICE_NAME=hub01-shop
OTEL_SERVICE_INSTANCE_ID=

# OTLP Exporter configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://lgtm:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_EXPORTER_OTLP_HEADERS=

# Exporter types (set to 'null' to disable)
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# Sampling configuration
OTEL_TRACES_SAMPLER_PARENT=true
OTEL_TRACES_SAMPLER=always_on  # always_on, always_off, traceidratio
OTEL_TRACES_SAMPLER_TRACEIDRATIO_RATIO=0.05

# Propagators
OTEL_PROPAGATORS=tracecontext

# Instrumentation toggles (set to false to disable specific instrumentation)
OTEL_INSTRUMENTATION_HTTP_SERVER=true
OTEL_INSTRUMENTATION_HTTP_CLIENT=true
OTEL_INSTRUMENTATION_QUERY=true
OTEL_INSTRUMENTATION_REDIS=true
OTEL_INSTRUMENTATION_QUEUE=true
OTEL_INSTRUMENTATION_CACHE=true
OTEL_INSTRUMENTATION_EVENT=true
OTEL_INSTRUMENTATION_VIEW=true
OTEL_INSTRUMENTATION_LIVEWIRE=true
OTEL_INSTRUMENTATION_CONSOLE=true
